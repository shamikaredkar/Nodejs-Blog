<div class="admin-title">
  <h2>Posts</h2>
  <a href="/add-post">
    <img src="/img/plus.png" alt="Add button icon" />
  </a>
</div>

<ul class="admin-posts">
  <% data.forEach(post => { %>
  <li>
    <a href="/post/<%= post._id %>"> <span><%= post.title %></span> &nearr; </a>
    <div class="admin-post-controls">
      <a href="/edit-post/<%= post._id %>" class="btn-edit">Edit</a>
      <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn-delete" />
      </form>
    </div>
  </li>
  <% }) %>
</ul>
